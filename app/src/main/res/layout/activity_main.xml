<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3DDFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/ScoreA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Score of A = 0"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ScoreB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Score of B = 0"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--1st Row = 1,2,3-->
    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/btn2"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX11"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX12"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/btn2"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX13"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <!--1st Row = 1,2,3-->

    <!--2nd Row = 4,5,6-->
    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/btn5"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX21"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX22"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/btn5"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX23"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <!--2nd Row = 4,5,6-->


    <!--the Hash lines-->
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_above="@id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="#070000" />

    <RelativeLayout
        android:id="@+id/secondRowMatcher"
        android:layout_width="330dp"
        android:layout_height="5dp"
        android:layout_above="@id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:background="#F44336"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/firstRowMatcher"
        android:layout_width="330dp"
        android:layout_height="5dp"
        android:layout_above="@id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="#F44336"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/secondRow"
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_below="@id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#070000" />


    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="-14dp"
        android:layout_toLeftOf="@id/btn5"
        android:background="#070000" />

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-14dp"
        android:layout_toRightOf="@id/btn5"
        android:background="#070000" />
    <!--the Hash lines-->

    <!--3rd Row = 7,8,9-->
    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/btn8"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX31"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX32"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btn8"
        android:background="#B3DDFF">

        <ImageView
            android:id="@+id/btnImgX33"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <!--3rd Row = 7,8,9-->

    <Button
        android:id="@+id/Reset"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="#000000"
        android:text="Reset"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/thirdRowMatcher"
        android:layout_width="330dp"
        android:layout_height="5dp"
        android:layout_below="@id/secondRow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#F44336"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/firstColumnMatcher"
        android:layout_width="5dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/btn5"
        android:background="#F44336"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/secondColumnMatcher"
        android:layout_width="5dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="-65dp"
        android:layout_toLeftOf="@id/btn5"
        android:background="#F44336"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/thirdColumnMatcher"
        android:layout_width="5dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn5"
        android:background="#F44336"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftToRightMatcher"
        android:layout_width="5dp"
        android:layout_height="430dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="-65dp"
        android:layout_toLeftOf="@id/btn5"
        android:background="#F44336"
        android:rotation="135"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rightToLeftMatcher"
        android:layout_width="5dp"
        android:layout_height="430dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="-65dp"
        android:layout_toLeftOf="@id/btn5"
        android:background="#F44336"
        android:rotation="-135"
        android:visibility="gone" />

</RelativeLayout>



